<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Social Network Web App</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>AccountJSP</servlet-name>
        <jsp-file>/jsp/account.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>RegJSP</servlet-name>
        <jsp-file>/jsp/reg.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LoginJSP</servlet-name>
        <jsp-file>/jsp/login.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccountJSP</servlet-name>
        <jsp-file>/jsp/update-account.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>FriendsJSP</servlet-name>
        <jsp-file>/jsp/friends.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.getjavajob.training.web1803.webapp.servlets.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.getjavajob.training.web1803.webapp.servlets.LogoutServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>GetPhotoServlet</servlet-name>
        <servlet-class>com.getjavajob.training.web1803.webapp.servlets.GetPhotoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>com.getjavajob.training.web1803.webapp.servlets.RegServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <servlet-class>com.getjavajob.training.web1803.webapp.servlets.UpdateAccountServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>FriendsServlet</servlet-name>
        <servlet-class>com.getjavajob.training.web1803.webapp.servlets.FriendsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.getjavajob.training.web1803.webapp.filters.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>


    <servlet-mapping>
        <servlet-name>FriendsServlet</servlet-name>
        <url-pattern>/FriendsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPhotoServlet</servlet-name>
        <url-pattern>/getPhoto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegJSP</servlet-name>
        <url-pattern>/reg.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginJSP</servlet-name>
        <url-pattern>/login.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountJSP</servlet-name>
        <url-pattern>/account.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FriendsJSP</servlet-name>
        <url-pattern>/friends.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAccountJSP</servlet-name>
        <url-pattern>/updateAccount.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/RegServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <url-pattern>/UpdateAccountServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
</web-app>